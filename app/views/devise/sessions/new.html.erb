<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="mb-4">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class:"block border-gray-300 p-2 rounded" } %>
    </div>

    <div class="mb-4">
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class:"block border-gray-300 p-2 rounded" } %>
    </div>

    <div class="mb-4">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
